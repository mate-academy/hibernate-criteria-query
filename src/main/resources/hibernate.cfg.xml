<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.generate_statistics">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/movie_store?serverTimeZone=UTC</property>
        <property name="connection.username">hibernate</property>
        <property name="connection.password">hibernate</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.movie.store.model.Movie" />
        <mapping class="com.movie.store.model.MovieSession" />
        <mapping class="com.movie.store.model.CinemaHall" />
    </session-factory>
</hibernate-configuration>